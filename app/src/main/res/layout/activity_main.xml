<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_large">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/app_title_size"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_xlarge"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Phone Number Label -->
        <TextView
            android:id="@+id/tvPhoneLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/phone_number_label"
            android:textSize="@dimen/label_text_size"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/margin_medium"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Phone Number Input -->
        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:hint="@string/phone_hint"
            android:inputType="phone"
            android:maxLines="1"
            android:padding="@dimen/edit_text_padding"
            android:minHeight="@dimen/edit_text_min_height"
            android:background="@android:drawable/edit_text"
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintTop_toBottomOf="@id/tvPhoneLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Phone Format Info -->
        <TextView
            android:id="@+id/tvPhoneInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/phone_format_info"
            android:textSize="@dimen/info_text_size"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="@dimen/spacing_tiny"
            app:layout_constraintTop_toBottomOf="@id/editTextPhone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Message Label with Character Count -->
        <LinearLayout
            android:id="@+id/layoutMessageHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_large"
            app:layout_constraintTop_toBottomOf="@id/tvPhoneInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvMessageLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/message_label"
                android:textSize="@dimen/label_text_size"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvCharacterCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/159"
                android:textSize="@dimen/character_counter_text_size"
                android:textColor="@android:color/darker_gray"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Message Input -->
        <EditText
            android:id="@+id/editTextMessage"
            android:layout_width="0dp"
            android:layout_height="@dimen/message_input_height"
            android:layout_marginTop="@dimen/margin_small"
            android:hint="@string/message_hint"
            android:gravity="top|start"
            android:inputType="textMultiLine|textCapSentences"
            android:padding="@dimen/edit_text_padding"
            android:background="@android:drawable/edit_text"
            android:scrollbars="vertical"
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintTop_toBottomOf="@id/layoutMessageHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Message Info -->
        <TextView
            android:id="@+id/tvMessageInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/message_length_info"
            android:textSize="@dimen/info_text_size"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="@dimen/spacing_tiny"
            app:layout_constraintTop_toBottomOf="@id/editTextMessage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Send SMS Button -->
        <Button
            android:id="@+id/btnSendSMS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:text="@string/btn_send_sms"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            android:minHeight="@dimen/button_height"
            android:paddingHorizontal="@dimen/button_padding_horizontal"
            android:paddingVertical="@dimen/button_padding_vertical"
            app:layout_constraintTop_toBottomOf="@id/tvMessageInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Compose SMS Button -->
        <Button
            android:id="@+id/btnComposeSMS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="@string/btn_compose_sms"
            android:textSize="@dimen/text_size_medium"
            android:minHeight="@dimen/button_height"
            android:paddingHorizontal="@dimen/button_padding_horizontal"
            android:paddingVertical="@dimen/button_padding_vertical"
            style="?android:attr/buttonBarButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/btnSendSMS"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Info Footer -->
        <TextView
            android:id="@+id/tvFooter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/app_info"
            android:textSize="@dimen/info_text_size"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_medium"
            app:layout_constraintTop_toBottomOf="@id/btnComposeSMS"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>